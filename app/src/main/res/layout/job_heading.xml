<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/inputs"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:padding="3dp"
        android:background="@drawable/buttons"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/job_header"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Friend_profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/us">
            </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Friend_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:text="User Name"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/Firend_user_Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Company"
                    android:textColor="@color/black"
                    android:textSize="17dp">
                </TextView>






            </LinearLayout>

        </LinearLayout>

     <!--   <TextView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Job Desription"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_below="@id/LinearLayout1">
        </TextView>  -->

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/job_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/SearchIconCar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/Search_Car_Info"
                android:layout_alignRight="@+id/Search_Car_Info"
                android:layout_alignBottom="@+id/Search_Car_Info"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/reload">
            </de.hdodenhof.circleimageview.CircleImageView>


            <TextView
                android:id="@+id/dislike_post"
                android:textAlignment="center"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted Time"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_horizontal">
            </TextView>


            <TextView
                android:id="@+id/Salary"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Salary"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>



    </LinearLayout>




</RelativeLayout>